@model Easy.Web.CMS.Layout.LayoutEntity
@{
    Style.Reqiured("Layout").AtFoot();
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div>布局</div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditModel()
            <div class="toolBar">
                <input type="button" class="btn btn-default btn-sm cancel" value="取消" />
                <input type="submit" class="btn btn-primary btn-sm" value="保存" data-value="@ActionType.Create" />
            </div>
        }
        
    </div>
</div>