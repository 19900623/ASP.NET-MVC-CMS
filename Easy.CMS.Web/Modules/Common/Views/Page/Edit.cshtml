@model Easy.CMS.Page.PageEntity


<div class="panel panel-default">
    <div class="panel-heading">
        <div>页面</div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditModel()
            <div class="toolBar">

                <input type="submit" value="删除" class="btn btn-danger btn-sm delete" data-value="@ActionType.Delete" />
                <input type="submit" value="设计" class="btn btn-success btn-sm" data-value="@ActionType.Design" />
                <input type="submit" value="发布" class="btn btn-info btn-sm publish" data-value="@((int)ActionType.Publish)" />
                <input type="submit" value="保存" class="btn btn-primary btn-sm" data-value="@ActionType.Update" />
                <input type="button" class="btn btn-default btn-sm cancel" value="取消" />
            </div>
        }
    </div>
</div>
@using (Script.AtFoot())
{
    <script type="text/javascript">
        $(".delete").click(function () {
            return confirm("删除页面会删除对应的子页面，确定要删除吗？");
        });
        $(function () {
            var url = $("#Url");
            url.data("url", url.val().substring(0, "".lastIndexOf("/")));
        });
        $("#PageUrl").blur(function () {
            var url = $("#Url");
            var parentUrl = url.data("url");
            if (!parentUrl) {
                parentUrl = "~/";
            }
            var thisUrl = $(this).val();
            var replaceValue = ["/", " ", "?", "`", "~", "!", "@@", "#", "$", "%", "^", "&", "*", "(", ")", "-", "+", "[", "]", "{", "}", "\\", "|", ";", ":", "'", "\"", ",", ".", "<", ">"];
            for (var i = 0; i < replaceValue.length; i++) {
                thisUrl = thisUrl.replaceAll(replaceValue[i], "_");
            }
            url.val(parentUrl + thisUrl);
        });
    </script>    
    
}