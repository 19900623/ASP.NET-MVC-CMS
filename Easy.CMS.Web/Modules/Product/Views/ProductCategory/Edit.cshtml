@model Easy.CMS.Product.Models.ProductCategory
@{
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div>编辑</div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditModel()
            <div class="toolBar">
                <input type="submit" class="btn btn-danger btn-sm delete" value="删除" data-value="@ActionType.Delete" />
                <input type="submit" class="btn btn-primary btn-sm" value="保存" data-value="@ActionType.Update" />
                <input type="button" class="btn btn-default btn-sm cancel" value="取消" />
            </div>
        }

    </div>
</div>
@using (Script.AtFoot())
{
    <script type="text/javascript">
        $(".delete").click(function () {
            return confirm("删除类别会删除对应的子类别和文章，确定要删除吗？");
        });
    </script>
}