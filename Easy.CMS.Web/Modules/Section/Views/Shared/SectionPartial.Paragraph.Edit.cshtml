        <div class="pull-left icon">
            <i class="text-primary sort-handle">
                <i class="glyphicon glyphicon-resize-vertical"></i>
            </i>
            <a href="@Url.Action("Edit", "SectionContentParagraph", new { Id = Model.ID })" class="dialog glyphicon glyphicon-edit text-primary" data-width="800" data-height="280">
