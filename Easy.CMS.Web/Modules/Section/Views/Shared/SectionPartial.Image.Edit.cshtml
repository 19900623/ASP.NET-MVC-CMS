@using Easy.CMS.Section.Models
@model SectionContentImage
<li class="list-group-item" data-id="@Model.ID">
    <div class="icon-left clearfix">
        <div class="pull-left icon">
            <i class="text-primary sort-handle glyphicon glyphicon-resize-vertical">
            </i>
            <a href="@Url.Action("Edit", "SectionContentImage", new {Id = Model.ID})"
               class="dialog glyphicon glyphicon-edit text-primary" 
               data-width="800" data-height="350" title="编辑图片">
            </a>
            <a href="@Url.Action("Delete", "SectionContentImage", new {Id = Model.ID})" class="ajax glyphicon glyphicon-remove text-danger">
            </a>
        </div>
        <div class="pull-left">
            <label class="label label-primary">图片</label>
            <img src="@Url.Content(Model.ImageSrc)" alt="@Model.ImageAlt" title="@Model.ImageTitle" style="width: @(Model.Width.HasValue ? Model.Width.Value + "px" : "auto"); height: @(Model.Height.HasValue ? Model.Height.Value + "px" : "auto");"/>
        </div>
    </div>
</li>