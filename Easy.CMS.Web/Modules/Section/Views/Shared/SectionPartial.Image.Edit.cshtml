@using Easy.CMS.Section.Models
@model SectionContentImage
<li class="list-group-item clearfix" data-id="@Model.ID">
    <div class="icon-left">
        <div class="pull-left icon">
            <a href="@Url.Action("Delete", "SectionContentImage", new {Id = Model.ID})" class="ajax">
                <i class="glyphicon glyphicon-remove"></i>
            </a>
            <a href="@Url.Action("Edit", "SectionContentImage", new { Id = Model.ID })" class="dialog" data-width="800" data-height="200">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
        </div>
        <div class="pull-left">
            <img src="@Url.Content(Model.ImageSrc)" alt="@Model.ImageAlt" title="@Model.ImageTitle" />
        </div>
    </div>
</li>