@using Easy.CMS.Section.Models
@using Easy.Web.CMS
@model SectionContentTitle

<li class="list-group-item" data-id="@Model.ID">
    <div class="icon-left clearfix">
        <div class="pull-left icon">
            <i class="text-primary sort-handle">
                <i class="glyphicon glyphicon-resize-vertical"></i>
            </i>
            <a href="@Url.Action("Edit", "SectionContentTitle", new { Id = Model.ID })" class="dialog glyphicon glyphicon-edit text-primary" data-width="800" data-height="280">
                <i class=""></i>
            </a>
            <a href="@Url.Action("Delete", "SectionContentTitle", new { Id = Model.ID })" class="ajax glyphicon glyphicon-remove text-danger">
            </a>
        </div>
        <div class="pull-left">
            @if (Model.Href.IsNullOrEmpty())
            {
                @Model.InnerText
            }
            else
            {
                <a href="@Url.Content(Model.Href)" target="@Html.SmartLinkTarget(Model.Href)">
                    @Model.InnerText
                </a>
            }
        </div>
    </div>
</li>