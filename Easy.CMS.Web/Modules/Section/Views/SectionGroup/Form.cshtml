@using (Html.BeginForm("Save", "SectionGroup"))
{
    @Html.EditModel()
}

@using (Script.AtFoot())
{
    <script type="text/javascript">
        $(document).on("click", "#confirm", function () {
            $("form").submit();
        });
        $(function () {
            if (@(ViewBag.Close!=null?1:0)) {
                $(".popUpToolBar .btn-default").click();
            }
        });
    </script>
}