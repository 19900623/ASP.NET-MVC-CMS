@model Easy.CMS.Article.ViewModel.ArticleTopWidgetViewModel
@{
    if (!Model.Widget.DetailPageUrl.IsNullOrEmpty())
    {
        Model.Widget.DetailPageUrl = Url.Content(Model.Widget.DetailPageUrl);
    }
    if (!Model.Widget.MoreLink.IsNullOrEmpty())
    {
        Model.Widget.MoreLink = Url.Content(Model.Widget.MoreLink);
    }
}
<div class="article tops">

    @if (!Model.Widget.Title.IsNullOrEmpty())
    {
        <div class="item-title">
            <h5>@Model.Widget.Title<i>@Model.Widget.SubTitle</i></h5>
            @if (!Model.Widget.MoreLink.IsNullOrEmpty())
            {
                <a class="more" href="@Model.Widget.MoreLink">更多>></a>
            }            
        </div>
    }

    <div class="article-list">
        <ul>
            @if (Model.Articles != null)
            {
                foreach (var item in Model.Articles)
                {
                    <li>
                        <span class="title">
                            <a href="@(Model.Widget.DetailPageUrl + "?id=" + item.ID)" target="_blank">@item.Title</a>
                        </span>
                        <em class="time">
                            @((item.PublishDate ?? DateTime.Now).ToString("yyyy/MM/dd"))
                        </em>
                    </li>
                }
            }
        </ul>
    </div>


</div>
