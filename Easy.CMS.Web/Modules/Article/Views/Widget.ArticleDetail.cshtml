@model Easy.CMS.Article.ViewModel.ArticleDetailViewModel
@{
    Style.Reqiured("Article").AtHead();
    if (Model.Current == null)
    {
        return;
    }
    Easy.Web.CMS.Layout.LayoutEntity layout = (Easy.Web.CMS.Layout.LayoutEntity)ViewData[Easy.Web.CMS.Layout.LayoutEntity.LayoutKey];
    layout.Page.Title = Model.Current.Title;
}
<div class="articleDetail">
    <div class="page-header">
        <h2>@Model.Current.Title</h2>
        <div class="date">
            @((Model.Current.PublishDate ?? DateTime.Now).ToString("yyyy/MM/dd"))
        </div>
    </div>
    <div class="detail">
        @Html.Raw(Model.Current.ArticleContent)
    </div>
</div>
