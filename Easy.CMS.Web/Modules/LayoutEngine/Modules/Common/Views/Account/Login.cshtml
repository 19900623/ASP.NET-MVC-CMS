@using Version = Easy.Web.CMS.Version
@{
    ViewBag.Title = Version.CurrentVersion;
    Style.Reqiured("admin").AtHead();
    Style.Reqiured("Login").AtHead();
    Script.Reqiured("validate").AtFoot();
}

@using (Html.BeginForm())
{

    <div class="login-panel">
        <div class="login-panel-heading">
            <a href="http://www.zkea.net/" target="_blank">
                <img class="logo" src="~/Content/Images/logo_zkea.png" alt="ZKEACMS" />
            </a>
        </div>
        <div class="login-panel-body">
            <h3 class="version text-center">@Version.CurrentVersion</h3>
            <p>请输入您的用户信息以登录系统</p>
            <div class="form-input">
                <h4>用户名</h4>
                <input type="text" id="userName" name="userName" class="form-control" data-val="true" data-val-required="请输入用户名"/>
                <span class="field-validation-valid " data-valmsg-for="userName" data-valmsg-replace="true"></span>
            </div>
            <div class="form-input">
                <h4>密码</h4>
                <input type="password" id="password" name="password" class="form-control" data-val="true" data-val-required="请输入密码" />
                <span class="field-validation-valid" data-valmsg-for="password" data-valmsg-replace="true"></span>
            </div>
            @if (ViewBag.Errormessage != null)
            {
                <div class="text-center alert alert-danger">
                    @ViewBag.Errormessage
                </div>
            }            
            <div>
                <input type="submit" class="btn btn-danger btn-login" value="登录" />
            </div>
        </div>
        <div class="login-panel-footer">
            <p>
                <a href="http://www.zkea.net/licenses" target="_blank">许可协议</a>
            </p>
            <p>
                Copyright © 2015-@DateTime.Now.Year ZKEASOFT. All Rights Reserved | <a href="http://www.zkea.net" target="_blank">www.zkea.net</a>
            </p>
        </div>
    </div>
}
@using (Script.AtFoot())
{
    <script type="text/javascript" async src="http://www.zkea.net/openstatistics"></script>
}